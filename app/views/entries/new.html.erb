<% @user = User.find_by({ "id" => session["user_id"] }) %>

<% if @user == nil %>
  You must first <a href="/login" class="alert-link">login</a> to see places in the travel log.
<% else %>
<h1 class="fs-2 mb-4">New Entry</h1>
  <form action="/entries" method="post" enctype="multipart/form-data">
    <input type="hidden" name="place_id" class="form-label" value="<%= params["place_id"] %>">
    
    <div class="mb-3">
      <label for="title_input" class="form-label">Title</label>
      <input type="text" name="title" class="form-control" id="title_input">
    </div>

    <div class="mb-3">
      <label for="description_input" class="form-label">Description</label>
      <input type="text" name="description" class="form-control" id="description_input">
    </div>

    <div class="mb-3">
      <label for="occurred_on_input" class="form-label">Occurred On</label>
      <input type="date" name="occurred_on" class="form-control" id="occurred_on_input">
    </div>

    <div class="mb-3">
      <label for="uploaded_image_input" class="form-label">Upload Image</label>
      <input type="file" name="uploaded_image" id="uploaded_image_input" class="form-control">
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <a href="/places" class="btn btn-secondary">Cancel</a>

  </form>
<% end %>
