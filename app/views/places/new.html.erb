<% @user = User.find_by({ "id" => session["user_id"] }) %>
<% if @user == nil %>
  You must first <a href="/login" class="alert-link">login</a> to see places in the travel log.
<% else %>
  <h1 class="fs-2 mb-4">New Place</h1>
  <form action="/places" method="post">
    <div class="mb-3">
      <label for="name_input" class="form-label">Name</label>
      <input type="text" class="form-control" name="name" id="name_input">
    </div>

    <div class="mt-4 d-flex gap-2">
    <button class="btn btn-primary" type="submit">Save</button>
    <a href="/places" class="btn btn-outline-secondary">‚Üê Back to All Places</a>
  </div>

  </form>
<% end %>

